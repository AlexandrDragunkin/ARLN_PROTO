       setucs lcs Karn[j1] ;
       #l2st    Line  0 ymax 0 len2 ymax 0 done    ;
       #l2ed    Line  0 ymin 0 len2 ymin 0 done    ;

       Ptranscs(0,3,len2,0,0,vec[1],vec[2],vec[3]) ;
