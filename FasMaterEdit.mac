 #karkas MBCarcase set no yes :
}


global ProtoPath;
global pnt, iPNT;
defarr arr[3];

NULLOUT=getvarinst(2,"FasDMat",FasDMat,0);          //-- Умолчание для материалов
DefFasDMat=str(getyadsubst(27))+"#"+str(FasDMat) ;                    // Формируем строку умолчаний.

#ok_flag
setvar
"Изменить материал фасада двери"
""
left
"Определите параметры замены"
done
string auto button 6 default DefFasDMat     "Материал фасада:" NDMat
str listonly
	  current "По указанию"
		"Все распашные двери"
done
"Способ замены:"    S_zam
done;
if (ok_flag==0)
{
  exit;
}
macro Protopath+"ChgSel.mac" S_zam ;
//E_col=I_PrFDoor[fendinarray(S_PrFDoor,E_Col,1,N_PrFDoor)];
splitbydelim(NDMat,"#",Arr);
E_col=Arr[2];
if (S_zam=="По указанию")
{
  Loop2:
  onerror final;
  switch autosingle on;
  selbyattr "Left(FurnType,2)==\"23\"" prompt "Укажите дверь:" wholly : ;
  switch autosingle off;
  if (sysvar(61)==0)
  {
    goto final;
  }
  pnt1=getselnum(1);
  offerror;
  err=1;
  err=GetProtoVal(pnt1,"PrMater",PrMat);
  if (err==1)
  {
    protoobj edit list pnt1 nodc "PrMater" E_col ;
  }
  goto Loop2;
}
else
{
  i=0;
  LoopAll2:
  if (i<iPNT)
  {
    i=i+1;
    pnt1=pnt[i];
    err=1;
    err=GetProtoVal(pnt1,"PrMater",PrMat);
    if (err==1)
    {
      protoobj edit list pnt1 nodc "PrMater" E_col ;
    }
    goto LoopAll2;
  }
}
final:
switch autosingle off;
exit;
