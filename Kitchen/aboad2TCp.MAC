ФасМат=DbVar("ФасМат",0);     //-- Материал фасада нижней секции
ФасМат2=DbVar("ФасМат2",0);   //-- Материал фасада верхней секции
РисФас=DbVar("РисФас",0);     //-- Рисунок фасада нижней секции
РисФас2=DbVar("РисФас2",0);   //-- Рисунок фасада верхней секции
//------------------------------------------------------------
h_dsp=PriceInfo(PrMater,"Thickness",DbVar("HDSP",16));
