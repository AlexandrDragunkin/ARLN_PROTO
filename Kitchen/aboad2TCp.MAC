h_fas2=PriceInfo(ФасМат2,"Thickness",DbVar("HDSP",16));
FType1=PriceInfo(РисФас,"FurnType","0",2);
FType2=PriceInfo(РисФас2,"FurnType","0",2);
h_fas=max(h_fas1,h_fas2);
ТипКонт=1;   //-- Прямой
Верхний=0;   //-- Нижний
ObjTyp=0;    //-- Мебельный
PlcTyp=0;    //-- Нижний
//BiblNum=164; //-- В библиотеке ID=164
BiblNum=getprotoid("Kitchen","Стол терминальный полукруглый двухсекционный","ProtoMacro","aboad2TCp");  //-- ID прототипа
if (Правый==1)
{
  FurnType="100010";
}
else
{
  FurnType="100007";
}
if ((FType1!=FType2)&&(РисФас!=0)&&(РисФас2!=0))
{
 #ok_flag alternative "Предупреждение!" msgbox picture 1 beep 1 text "Тип фасада верхней и нижней секции должны быть одинаковы" done " Ок " done;
 exit;
}

//------------------------------------------------------------
begin:
Ширина=w-2*h_dsp;             //-- Внутренняя ширина
if (Правый==0)                //-- Левая ориентация
{
  DD=Радиус;                  //-- Изменение глубины
  dR=d;	   	                  //-- Глубина справа
  dL=d-DD;		                //-- Глубина слева
  if (dL<5*h_dsp)
  {
    d=int(Радиус+5*h_dsp);
  }
}
else
{
  DD=Радиус;                 //-- Изменение глубины
  dR=d-DD;	   	             //-- Глубина справа
  dL=d;		                   //-- Глубина слева
  if (dR<5*h_dsp)
  {
    d=int(Радиус+5*h_dsp);
  }
}
d=max(dl,dr);               //-- Максимальная глубина
