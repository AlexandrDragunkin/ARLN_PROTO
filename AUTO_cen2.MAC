//-- Авторазмер центров от базы.
defarr first[3], second[3], next[3];
defarr  xm[6],xm0[6] ;
defarr arr[14];
defarr xm1[500] xm2[500];
global TXT_cut;

shift=40;
xbeg=0;
NULLOUT=GetSnap();

objident prompt "Укажите базовый объект" : pnt ;

get "Первая точка" point missing  first[1] first[2] first[3]  :
get "Следующая точка" point first[1] first[2] first[3]
second[1] second[2] second[3]  :

get "Положение размерной линии" point first[1] first[2] first[3]
next[1] next[2] next[3]  :

#ok_flag
alternative "Авторазмеры" msgbox picture 2 beep 2 text "Просавить авторазмеры?" done "До середины" "До края" "Отмена" done
if (ok_flag==3)
{
	exit;
}

dx=second[1]-first[1];
dy=second[2]-first[2];
dz=second[3]-first[3];

if ((abs(dx)>abs(dy))&&(abs(dx)>abs(dz))) //-- размер по X
{
  xlev1=second[3];
  startp=next[3];
  if (next[3]<first[3])
  {
    shift=-shift;
  }
  code=1;
}
else
{
  if ((abs(dy)>abs(dx))&&(abs(dy)>abs(dz))) //-- размер по Y
	{
    code=2;
    putmsg("Авторазмер проставляется только вдоль осей X и Z",1);
    exit;
  }
  else
	{
    if ((abs(dz)>abs(dy))&&(abs(dz)>abs(dx))) //-- размер по Z
		{
      code=3;
      xlev1=second[1];
      startp=next[1];
      if (next[1]<first[1])
      {
        shift=-shift;
      }
    }
  }
}
rr=objgab3(pnt,xm0);
object_2=sysvar(60);
i=0;
j=0;

NEXT1:
i=i+1;
If (i<=object_2)
{
  point=getobjnum(i);
  name=getattr(point,"Posit",-1);
  If (name==10) {    goto NEXT1;  } // Игнорируем Каркас
  if (name==16) { goto NEXT1; } // Игнорируем ящики
  if (name==63) { goto NEXT1; } // Игнорируем группы ящиков
  if (name==17) { goto NEXT1; } // Игнорируем двери
  if (name==20) { goto NEXT1; } // Игнорируем двери
