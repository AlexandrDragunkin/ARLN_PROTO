		xlev=next[1];
		ylev=first[2];
		zlev=x1;
		hlev=40
		gosub metlevel;
  }
minx=x1+1;
x1=maxx;
goto NewLoop;

END_P:
NULLOUT=ReSnap();
grfcoeff arr[3];
exit

