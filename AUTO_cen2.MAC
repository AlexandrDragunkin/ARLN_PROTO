  }
  else
  {
    xlev1=zmn1;
  }
}
else
{
  if (ok_flag==1)
  {
    xlev1=(xmn2+xmn1)/2;
  }
  else
  {
    xlev1=xmn1;
  }
}
#ok_flag2
alternative "Авторазмеры" msgbox picture 2 beep 2 text "Просавить авторазмеры?" done "От начала базового объекта" "От конца базового объекта" done

if (code==3)
