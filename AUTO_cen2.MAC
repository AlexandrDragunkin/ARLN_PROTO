 if (ok_flag2==1)
 {
  xlev1=xmn1;
 }
 else
 {
  xlev1=xmn2; 
 }
}
if (second[code]<first[code])
{
   xmn1=xmn2;
   ymn1=ymn2;
   zmn1=zmn2;
}
x1=maxx;
NULLOUT=sysarr(43,arr);
grfcur=arr[3];    // Текущий граф.коэффициент
if (arr[3]<6)
