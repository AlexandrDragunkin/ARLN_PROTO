			 place gdim ;
		  }
		  explode gdim done ;
	   }
	   group all done;

	   objident last 1 vid[i] ;
	   Gosub SetPrAttrib ;
	   redraw all ;
	   lwidth 0 ;
	   invisible vid[i]  done;
	   goto met9 ;
	}
	if keyGV!=1 {   // Импортируем главный вид
	   keyGV=1
	   oldi=i
	   i=100

	   goto met999 ;
	}
	i=oldi
	NS_Vid=i // Общее число видов
return;
