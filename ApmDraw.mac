		  DX_minR=iif(abs(xm[1]-xmm[1])<DX_minR,abs(xm[1]-xmm[1]),DX_minR) ;
		  Attrobj Attach "D_StNum" Done  wlv[i_wlv] UCS_Name[i] ;
