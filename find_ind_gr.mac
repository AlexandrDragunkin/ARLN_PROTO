//-- Анализ по полученному ID элемента
getpar ID, Groups;
Groups[1]=0;

NULLOUT=getmplsubst(42,"Leg_ID","Leg_typs");
NULLOUT=getmplsubst(21,"Pet_ID","Pet_typs");
NULLOUT=getmplsubst(12,"Hand_ID","Hand_typs");
NULLOUT=getmplsubst(13,"Fix_ID","Fix_typs");
NULLOUT=getmplsubst(22,"CompID","CompTypes");

ind=FindInArray(Leg_ID,ID); //-- Ножки
if (ind!=0)
{
	Groups[1]=Groups[1]+1;
	Groups[Groups[1]+1]=67;
}
ind=FindInArray(Pet_ID,ID); //-- Петли
if (ind!=0)
{
  Groups[1]=Groups[1]+1;
  Groups[Groups[1]+1]=32;
}
ind=FindInArray(Hand_ID,ID); //-- Ручки
if (ind!=0)
{
  Groups[1]=Groups[1]+1;
  Groups[Groups[1]+1]=23;
}
ind=FindInArray(Fix_ID,ID); //-- Элементы крепежа
if (ind!=0)
{
  Groups[1]=Groups[1]+1;
  Groups[Groups[1]+1]=24;
}
ind=FindInArray(CompID,ID); //-- Комплектующие
if (ind!=0)
{
  Groups[1]=Groups[1]+1;
  Groups[Groups[1]+1]=33;
}
exit;