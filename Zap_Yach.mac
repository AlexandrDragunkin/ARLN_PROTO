global IntP1 IntP2 IntP3;         // Точки углов ячейки
//================================
global IndexP;  // Для PutPoint.mac
global ProtoPath;
 defarr arr[3];
 
OnError Final1;
macro ProtoPath+"Yacheyka.mac" ;

