auto
;
 If (!IsAttrdef("DimLeader"))
 { Attribute Create "DimLeader" "Указатель" Real 5 0  ; }
if auto==0 {
 //Укажите объект к которому прставляется номер
Objident : pnt ;
level=getattr(pnt,"PorNumber",-1);
SETUCS VCS ;
get "Первая точка" point missing  first[1] first[2] first[3]  :
