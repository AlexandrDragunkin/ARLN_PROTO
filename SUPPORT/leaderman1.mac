dimarrows auto
dimlnflags 0
dimtext 0 "<>" done

    Attrobj Attach  "AutoPlace"  Done Last 1 1 ;
    Attrobj Attach  "VidDimPlace"  Done Last 1 CurrVi;
    Attrobj Attach  "DimLeader"  Done Last 1 1;
    chprop layer last 1 done CV ;
    layers on CV ;
