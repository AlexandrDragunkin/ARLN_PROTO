}
i=0
err=0;
met2:
if i<Seln {
	i=i+1
	DobS=""
	tpt=Obj[i]
	if isvardef("tpt")!=16 {
		goto met2;
	}
	if !GetObjVisual(Obj[i])
	{
		visible Obj[i];
	}
	nextlb:
   //offerror;
