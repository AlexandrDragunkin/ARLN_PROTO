			Nlist=Seln
			if i>1 { DobS="д" }
		}
		met2a:
		;macro L_SUPPORT+"Win_PltLn.mac"
		Obj[i]        //указатель на объект вокруг которого создаем штамп
		DobS          //Дополнительный символ для головного штампа "" для следующих "д"
